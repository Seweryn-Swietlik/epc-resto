{
  "name": "epc-resto",
  "version": "0.0.1",
  "description": "",
  "author": "EPC Network",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "env nest start",
    "start:dev": "env NODE_ENV=development nest start --watch",
    "start:debug": "env nest start --debug",
    "start:prod": "env node dist/src/main",
    "prepare": "husky install",
    "format": "yarn prettier -w ./src",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration-create": "yarn typeorm -- migration:create",
    "migration-generate": "yarn typeorm -- -d ./src/lib/config/typeorm-migrations.datasource.ts migration:generate",
    "migration-run": "yarn typeorm -- -d ./src/lib/config/typeorm-migrations.datasource.ts migration:run",
    "migration-revert": "yarn typeorm -- -d ./src/lib/config/typeorm-migrations.datasource.ts migration:revert",
    "upd": "yarn upgrade-interactive --latest",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/axios": "3.1.2",
    "@nestjs/bullmq": "10.2.2",
    "@nestjs/common": "10.4.7",
    "@nestjs/core": "10.4.7",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/microservices": "10.4.7",
    "@nestjs/platform-express": "10.4.7",
    "@nestjs/platform-socket.io": "10.4.7",
    "@nestjs/schedule": "4.1.1",
    "@nestjs/swagger": "8.0.5",
    "@nestjs/typeorm": "10.0.2",
    "@nestjs/websockets": "10.4.7",
    "@socket.io/redis-adapter": "8.3.0",
    "app-root-path": "3.1.0",
    "bullmq": "5.25.6",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "currency.js": "2.0.4",
    "dotenv": "16.4.5",
    "ioredis": "5.4.1",
    "nestjs-config": "1.4.11",
    "pg": "8.13.1",
    "ramda": "0.30.1",
    "redis": "4.7.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "socket.io": "4.8.1",
    "swagger-ui-express": "5.0.1",
    "typeorm": "0.3.20",
    "uuid": "11.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.7",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.7",
    "@types/app-root-path": "1.2.8",
    "@types/cache-manager": "4.0.6",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.12",
    "@types/node": "22.9.0",
    "@types/ramda": "0.30.2",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "morgan": "1.10.0",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.8.2"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "./",
    "testRegex": ".*\\.(spec|test|e2e-spec|integration-spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^lib/(.*)$": "<rootDir>/src/lib/$1",
      "^modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@categories/(.*)$": "<rootDir>/src/modules/categories/$1",
      "^@meals/(.*)$": "<rootDir>/src/modules/meals/$1",
      "^@orders/(.*)$": "<rootDir>/src/modules/orders/$1",
      "^@redis/(.*)$": "<rootDir>/src/modules/redis/$1",
      "^@websocket/(.*)$": "<rootDir>/src/modules/websocket/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1"
    }
  },
  "lint-staged": {
    "src/**/*.+(ts|tsx)": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix"
  }
}

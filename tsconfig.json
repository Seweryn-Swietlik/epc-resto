{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"],
      "@categories/*": ["modules/categories/*"],
      "@meals/*": ["modules/meals/*"],
      "@orders/*": ["modules/orders/*"],
      "@redis/*": ["modules/redis/*"],
      "@websocket/*": ["modules/websocket/*"],
      "@lib/*": ["lib/*"],
      "lib/*": ["lib/*"],
      "modules/*": ["modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tmp"]
}

{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.html",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.proto",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts", ".response.ts"],
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ]
  }
}
